{
  "version": 2,
  "builds": [
    {
      "src": "api/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    // your routes section (cut off in screenshot)
  ]
}

    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/api/wsgi.py"
        }
    ]
}
